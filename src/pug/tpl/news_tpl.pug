article.container.main-wrapper.text-justify
	.row
		.container-full.news-item
			header
				h3.news-item-title
					|<a class="hyphenation" href="[+url+]" [+link_attributes+]>
					|	[+title+]
					|</a>
			time.icon-calendar(datetime="[+news_date+]")
				|[+out_date+]
			.news-item-description
				p.news-item-photo
					|<a href="[+url+]" [+link_attributes+]>
					|	<img src="[[thumb? &input=`[+imageSoc+]` &options=`w=751,h=422,zc=C`]]" alt="[+alt+]">
					|</a>
				p.news-item-text
					span.text-wrapper.hyphenation
						|[+introtext:nl2br+]
					|<a class="btn" href="[+url+]" [+link_attributes+]>
					|	Подробнее
					|</a>